<h2><%=  @cocktail.name %></h2>


<ul>
<% @cocktail.doses.each do |dose| %>
<li>
  <%= dose.description %>
  <br>
  <%= dose.ingredient.name %>

  <%= link_to "Delete dose", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  %>
</li>
<% end %>
</ul>

<%= link_to "Add Dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Cocktails", cocktails_path %>
